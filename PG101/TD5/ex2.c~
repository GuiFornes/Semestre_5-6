#include <stdio.h>
#include <math.h>
#include <stdlib.h>

struct coefs {
  double a;
  double b;
  double c;
};

double poly(struct coefs f, double x)
{
  double output = f.a*x*x+f.b*x+f.c;
  return output;
} 



int main(int argc, char * argv[])
{
  double x;
  struct coefs f;
  if(argc!=5){
    printf("donnez dans l'ordre a, b c puis x\n");
    scanf("%lf", &(f.a));
    scanf("%lf", &(f.b));
    scanf("%lf", &(f.c));
    scanf("%lf", &x);
    
  }
  else {
  
    f.a = atof(argv[1]);
    f.b = atof(argv[2]);
    f.c = atof(argv[3]);
    x = atoi(argv[4]);
  }
  printf("f(%lf) = %lf*%lfÂ² + %lf*%lf + %lf = %lf\n", x, f.a, x, f.b, x, f.c, poly(f, x));
  
  return 0;
}
